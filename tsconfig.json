{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "target": "ES6",
    "module": "ES2020",         // ðŸ‘ˆ usa mÃ³dulos de navegador
    "moduleResolution": "node", // ðŸ‘ˆ resuelve imports estilo Node (recomendado)

    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,


    // Other Outputs
    "sourceMap": false,
    "declaration": false,
    "declarationMap": false,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "skipLibCheck": true
  }
}
